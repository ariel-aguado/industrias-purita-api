{
  "kind": "collectionType",
  "collectionName": "productos",
  "info": {
    "name": "Productos",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "nombre": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "uso": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "detalles": {
      "type": "richtext",
      "required": false
    },
    "historia": {
      "type": "richtext",
      "required": false
    },
    "culinaria": {
      "type": "richtext",
      "required": false
    },
    "propiedades": {
      "type": "richtext",
      "required": false
    },
    "activo": {
      "type": "boolean",
      "default": true,
      "required": false
    },
    "icono": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "etiqueta": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "caracteristicas": {
      "via": "producto",
      "collection": "caracteristicas"
    },
    "receta": {
      "model": "recetas"
    },
    "hero": {
      "via": "productos",
      "model": "heroes"
    },
    "novedade": {
      "via": "productos",
      "model": "novedades"
    },
    "precio": {
      "type": "decimal",
      "required": true
    }
  }
}
